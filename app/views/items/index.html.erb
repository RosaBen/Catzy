<h1>Liste des chatons</h1>

<% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.image_url %></td>
        <td><%= link_to 'En savoir plus', item %></td>
      </tr>
    <% end %>

    <p style="color: green"><%= notice %></p>
<% if params[:success] %>
  <p>Paiement réussi ! 🎉</p>
<% elsif params[:canceled] %>
  <p>Paiement annulé.</p>
<% end %>
