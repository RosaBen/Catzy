<section class="hero-section d-flex align-items-end justify-content-center text-center">
    <div class="w-100 px-4">
      <div class="container hero-content">
        <h1>Catzy</h1>
        <p class="lead">Des images qui murmurent à l’âme</p>
      </div>
    </div>
  </section>


<div class="container">

  <h1>Trouve ton bonheur ici</h1>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <tr>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <td><%= item.image_url %></td>
          <%= link_to 'Voir plus', item_path(item), class: "btn btn-primary btn-sm" %>
        </tr>
      </div>
    <% end %>
  </div>
</div> 